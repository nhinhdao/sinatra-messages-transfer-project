<div class='App-body'>
  <div  id='form-login'>
    <img class="center-block" src="https://i.imgur.com/9OOKn1A.jpg?1" alt="Credit: https://mhpmag.com/wp-content/uploads/2018/04/Message-received.jpg" class="img-thumbnail">
    <h1 class="main-title text-info text-center">The Message Book</h1>
    <div class="ui two column centered grid">
      <div class="column">
        <form class="" action="/signup" method="post">
          <label for="username">Username</label>
          <input id="username" class="form-control" type="text" name="user[username]" required><br>
          <label for="email" >Email</label>
          <input id="email" class="form-control" type="text" name="user[email]" required><br>
          <label for="password" >Password</label>
          <input id="password" class="form-control" type="password" name="user[password]" required><br>
          <% if flash.has?(:error) %>
            <h4 class="alert alert-warning" role="alert"><%= flash[:error]%></h4>
          <% end %>
          <div class="ui center aligned segment basic">
            <button type="submit" class="ui small teal button">Sign Up</button>
            <a href="/" class="small ui blue button">Or, Log In</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
